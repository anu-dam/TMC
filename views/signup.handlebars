<script src="/js/signup.js"></script>
</head>

<body>
  {{> navbar }}
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>User Creation Form</h2>
        <form class="signup">
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="name" class="form-control" id="name-input" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="email-input" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-input" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">User Type</label>
            <select class="form-control" id="usertype">
              <option value="administrator">Administrator</option>
              <option value="user">User</option>
              <option value="client">Client</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Status</label>
            <select class="form-control" id="status">
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Client ID</label>
            <input class="form-control" type="clientid" placeholder="Client ID" id="clientid">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <button id="submit" type="submit" class="btn btn-default">Create User</button>
        </form>
        <br />
        <!-- <p>Or log in <a href="/login">here</a></p> -->
      </div>
    </div>
  </div>