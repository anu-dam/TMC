<script src="/js/signup.js"></script>
</head>

<body>
  {{> admin }}
  <div class="container">
    <h6>Welcome <span id="loggedInUserName"></span></h6>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Create Users</h2>
        <form class="signup" autocomplete="off">


          <div class="form-group">
            <label for="formGroupExampleInput" id="formdata">Name</label>
            <input type="name" class="form-control" id="name-input" placeholder="Name" required>
          </div>


          <div class="form-group">
            <label for="exampleInputEmail1" id="formdata">Email address</label>
            <input type="email" class="form-control" id="email-input" required autocomplete="off">
          </div>


          <div class="form-group">
            <label for="exampleInputPassword1" id="formdata">Password</label>
            <input type="password" class="form-control" id="password-input" placeholder="Password" required
              autocomplete="off">
          </div>


          <div class="form-group">
            <label for="exampleFormControlSelect1" id="formdata">User Type</label>
            <select class="form-control" id="usertype">
              <option value="administrator">Administrator</option>
              <option value="client">Client</option>
            </select>
          </div>


          <div class="form-group" style="display:none">
            <label for="exampleFormControlSelect1" id="formdata">Status</label>
            <select class="form-control" id="status">
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
            </select>
          </div>


          <div class="form-group">
            <label for="exampleFormControlSelect1" id="formdata">Status</label>
            <select class="form-control" id="clientid">

            </select>
          </div>


          {{!-- <div class="form-group">
            <label for="formGroupExampleInput1" id="formdata">Client ID</label>
            <input type="name" class="form-control" type="clientid" placeholder="Client ID" id="clientid" required>
          </div> --}}



          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>



          <button id="submit" type="submit" class="btn btn-default">Create User</button>

        </form>
        <br />
        <!-- <p>Or log in <a href="/login">here</a></p> -->
      </div>
    </div>
  </div>