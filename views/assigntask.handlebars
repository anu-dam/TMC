<script src="/js/assigntask.js"></script>
</head>

<body>
  {{> admin }}


  <div class="container">
    <h2>View and assign tasks</h2>
    <p>Current tasks and assign to customers</p>
    <table id="tasktable" class="row-border" style="width:100%">
      <thead>
        <tr>
          <th class="formdata">Title</th>
          <th class="formdata">Description</th>
          <th class="formdata">Due Date</th>
          <th class="formdata">Status</th>
          <th>Owner</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
      <tfoot>
        <tr>
          <th class="formdata">Title</th>
          <th class="formdata">Description</th>
          <th class="formdata">Due Date</th>
          <th class="formdata">Status</th>
          <th class="formdata">Owner</th>
        </tr>
      </tfoot>
    </table>
  </div>


  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4 id="tasktitle"></h4>

      <hr>
      <h6>Task Details</h6>
      <p id="taskdetail"></p>
      <br>
      <h6>Task Completion Date</h6>
      <p id="taskcompletedby"></p>
      <br>
      <h6>Task Status</h6>
      <p id="taskstatus"></p>
      <br>
      <h6>Task Owner</h6>
      <p id="taskowner"></p>
    </div>
    <div class="modal-footer">
      <button id="assign" class="waves-effect waves-light btn">Assign</button>
      <button id="cancel" class="modal-close btn waves-red">Cancel</button>
      {{!-- <a href="#!" id="cancel" class="modal-close btn waves-red">Cancel</a> --}}
    </div>

  </div>


  <div style="display: none" id="alert" class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> <span class="msg"></span>
  </div>