<script src="/js/assigntask.js"></script>
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
</head>

<body>
  {{> admin }}


  <div class="container">
    <h2>Task Table</h2>
    <p>List of current tasks created in the system</p>
    <table id="tasktable" class="row-border" style="width:100%">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Due Date</th>
          <th>Status</th>
          <th>Owner</th>
        </tr>
      </thead>
  </div>


  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4 id="tasktitle"></h4>

      <hr>
      <h6>Task Details</h6>
      <p id="taskdetail"></p>
      <br>
      <h6>Task Completion Date</h6>
      <p id="taskcompletedby"></p>
      <br>
      <h6>Task Status</h6>
      <p id="tasstatus"></p>
      <br>
      <h6>Task Owner</h6>
      <p id="taskowner"></p>
    </div>
    <div class="modal-footer">
      <button id="assign" class="waves-effect waves-light btn">Assign</button>
      <button id="cancel" class="modal-close btn waves-red">Cancel</button>
      {{!-- <a href="#!" id="cancel" class="modal-close btn waves-red">Cancel</a> --}}
    </div>

  </div>