</head>

<body>
  {{!-- {{> admin }} --}}
  {{> user }}
  <div class="container">
    <h2 id="clientname"></h2>
    <h4 id="clientaddress"></h4>
    <hr>
    <p>Current list of tasks</p>

    <table id="clienttasktable" class="row-border" style="width:100%">
      <thead>
        <tr>
          <th class="formdata">Title</th>
          <th class="formdata">Description</th>
          <th class="formdata">Due Date</th>
          <th class="formdata">Status</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
      <tfoot>
        <tr>
          <th class="formdata">Title</th>
          <th class="formdata">Description</th>
          <th class="formdata">Due Date</th>
          <th class="formdata">Status</th>
        </tr>
      </tfoot>
    </table>
  </div>


  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4 id="tasktitle"></h4>

      <hr>
      <h6>Task Details</h6>
      <p id="taskdetail"></p>
      <br>
      <h6>Task Completion Date</h6>
      <p id="taskcompletedby"></p>
      <br>
      <h6>Task Status</h6>
      <p id="taskstatus"></p>
      <br>
    </div>
    <div class="modal-footer">
      <button id="complete" class="waves-effect waves-light btn">complete</button>
      <button id="cancel" class="modal-close btn waves-red">Cancel</button>
      {{!-- <a href="#!" id="cancel" class="modal-close btn waves-red">Cancel</a> --}}
    </div>

  </div>


  <div style="display: none" id="alert" class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> <span class="msg"></span>
  </div>